{
  "name": "xatom-ui",
  "theme": "ui",
  "version": "0.3.0",
  "description": "A clean and elegant Atom UI.",
  "keywords": [
    "atom",
    "ui"
  ],
  "license": "MIT",
  "repository": "https://github.com/willyelm/xatom-ui.git",
  "main": "lib/main",
  "engines": {
    "atom": ">0.40.0"
  },
  "author": "Williams Medina <williams.medinaa@gmail.com>",
  "scripts": {
    "start": "tsc -w"
  },
  "devDependencies": {
    "@types/atom": "0.0.37",
    "@types/lodash": "^4.14.62",
    "@types/node": "^7.0.12",
    "typescript": "^2.2.2"
  },
  "dependencies": {
    "lodash": "^2.3.0",
    "atom-package-deps": "^4.5.0"
  },
  "package-deps": [
    "xatom-syntax"
  ],
  "configSchema": {
    "fontSize": {
      "title": "Font Size",
      "description": "Change the UI font size.",
      "type": [
        "integer",
        "string"
      ],
      "minimum": 8,
      "maximum": 20,
      "default": "Auto",
      "order": 1
    },
    "hideDockButtons": {
      "title": "Hide dock toggle buttons",
      "description": "Note: When hiding the toggle buttons, opening a dock needs to be done by using the keyboard or other alternatives.",
      "type": "boolean",
      "default": "false",
      "order": 2
    }
  }
}
